<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/home_top_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_top_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="@dimen/home_top_font"
        android:visibility="gone"
        android:textColor="@color/home_top_logo_font"
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:id="@+id/imageView_more"
        android:layout_width="@dimen/title_layout_head_ico_width_height"
        android:layout_height="@dimen/title_layout_head_ico_width_height"
        android:scaleType="center"
        android:src="@drawable/ic_actbar_more"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@+id/imageView_search"
        android:layout_width="@dimen/title_layout_head_ico_width_height"
        android:layout_height="@dimen/title_layout_head_ico_width_height"
        android:scaleType="center"
        android:src="@drawable/ic_actbar_search"
        android:layout_alignTop="@+id/imageView_more"
        android:layout_toLeftOf="@+id/imageView_more"
        android:layout_toStartOf="@+id/imageView_more" />

    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/home_bottom_top_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>